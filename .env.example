# Application Configuration
APP_NAME="Insurance Agent API"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=development

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT=60
OPENAI_MAX_RETRIES=3

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://insurance:password@localhost:5432/insurance_db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
SESSION_TTL_SECONDS=3600
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_MAX_CONNECTIONS=10

# ChromaDB Configuration
CHROMA_PERSIST_DIR=/app/data/chroma_db
CHROMA_COLLECTION_NAME=insurance_FAQ_collection
CHROMA_EMBEDDING_FUNCTION=default
FAQ_RETRIEVAL_TOP_K=3

# Phoenix Tracing (Optional)
PHOENIX_ENABLED=true
PHOENIX_COLLECTOR_ENDPOINT=http://localhost:6006/v1/traces
PHOENIX_PROJECT_NAME=multi-agent-system-prod

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=false

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Agent Configuration
SUPERVISOR_MAX_ITERATIONS=3
AGENT_TIMEOUT=30

# Rate Limiting (Optional)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=60
